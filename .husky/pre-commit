

# Detect if --no-verify was used
if [ -n "$HUSKY_SKIP_HOOKS" ] || [ "$HUSKY" = 0 ]; then
  echo -e "\n‚ö†Ô∏è WARNING: This commit was made with --no-verify!" >> "$COMMIT_MSG_FILE"
fi

# Get only staged JavaScript/TypeScript/JSON files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(json|js|jsx|ts|tsx)$')

# Exit early if no JS/TS/JSON files are staged
if [ -z "$STAGED_FILES" ]; then
  echo "‚úÖ No JavaScript/TypeScript files staged for commit."
  exit 0
fi

echo "üîç Running ESLint on staged files: $STAGED_FILES"

# Run ESLint on staged files (without fixing)
npx eslint --max-warnings=0 $STAGED_FILES

# Capture ESLint exit code
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
  echo "‚ùå ESLint found errors! Fix them before committing."
  exit 1
else
  echo "‚úÖ ESLint passed!!!!"
fi
