#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Get only staged JavaScript files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx)$')

# Exit early if no JS/TS files are staged
if [ -z "$STAGED_FILES" ]; then
  echo "‚úÖ No JavaScript/TypeScript files staged for commit."
  exit 0
fi

echo "üîç Running ESLint on staged files..."

# Run ESLint on staged files (without fixing)
npx eslint --max-warnings=0 $STAGED_FILES --fix

# Capture ESLint exit code
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
  echo "‚ùå ESLint found errors! Fix them before committing."
  exit 1
else
  echo "‚úÖ ESLint passed!"
fi
